<div class="form-section">
   <div class="create-company">

   </div>
   <div class="update-company">
      <form  id="update-form">
          <div class="form-group">
              <input type="text" name="name" id="name">
          </div>
          <div class="form-group">
              <input type="hidden" name="id" id="id">
          </div>
          <div class="form-group">
              <button type="submit">Update</button>
          </div>
      </form>
   </div>
</div>
<div class="table-section">
   <table>
       <thead>
           <tr>
               <th>id</th>
               <th>Name</th>
               <th>Action</th>
           </tr>
       </thead>
       <tbody>
           {{#each companies}}
           <tr>
               <td>{{this.id}}</td>
               <td>{{this.name}}</td>
               <td><button type="submit" onclick="updateDetails(this)">update</button></td>
           </tr>
           {{/each}}
       </tbody>
   </table>
</div>