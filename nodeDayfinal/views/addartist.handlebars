<div id="main-body">
   <div id="form-section">
    <form action="/artist/add" id="artist-form" method="post" enctype="multipart/form-data">
     <div class="form-group">
        <input type="text" name="name" placeholder="Name" id="">
     </div>
     <div class="form-group">
        <input type="file" name="picture" placeholder="Picture" id="">
     </div>
     <div class="form-group">
       <select name="genre" id="">
           <option value="0">--Select--</option>
           {{#each genres}}
             <option value="{{this.id}}">{{this.name}}</option>
           {{/each}}
       </select>
     </div>
     <div class="form-group">
       <select name="type" id="">
           <option value="0">--Select--</option>
          {{#each types}}
            <option value="{{this.id}}">{{this.name}}</option>
          {{/each}}
       </select>
     </div>
     <div class="form-group">
        <button type="submit" class="btn-primary">Add</button>
     </div>
</form>
   </div>
   <div id="edit-artist">
     <form id="updateArtist">
       <div class="form-group">
         <input type="text" name="id" id="editid" readonly>
       </div>
       <div class="form-group">
         <input type="text" name="editname" id="editname">
       </div>
       <div class="form-group">
         <select name="editgenre" id="editgenre">
           <option value="0">--Select--</option>
           {{#each genres}}
           <option value="{{this.id}}">{{this.name}}</option>
           {{/each}}
         </select>
       </div>
       <div class="form-group">
          <select name="edittype" id="edittype">
            <option value="0">--Select--</option>
            {{#each types}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
          </select>
       </div>
       <div class="form-group">
         <button class="btn-primary">Update</button>
       </div>
     </form>
   </div>
   <div id="table-section">
       <table id="artist-table">
           <thead>
               <tr>
                   <th>Id</th>
                   <th>Name</th>
                   <th>Picture</th>
                   <th>Genre</th>
                   <th>Type</th>
                   <th colspan="2">Action</th>
               </tr>
           </thead>
           <tbody>
               {{#each artists}}
               <tr>
                   <td>{{this.id}}</td>
                   <td>{{this.name}}</td>
                   <td><img src="{{this.picture}}" alt="{{this.name}}"></td>
                   <td>{{this.genre}}</td>
                   <td>{{this.type}}</td>
                   <td><button onclick="getArtist({{this.id}})">Edit</button></td>
                   <td><button onclick="deleteArtist({{this.id}})">Delete</button></td>
               </tr>
               {{/each}}
           </tbody>
       </table>
   </div>
</div>